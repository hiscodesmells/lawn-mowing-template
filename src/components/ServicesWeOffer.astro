---
import { Image } from "astro:assets";
import FencingImage from "../assets/fencing.webp"
import DrivewaysImage from "../assets/driveways.webp"
import BrickworkImage from "../assets/brickwork.webp"
import PressureWashingImage from "../assets/pressure-washing.webp"
import GardenConstructionImage from "../assets/garden-construction.webp"
import PavingAndPatioImage from "../assets/paving-and-patio.webp"
---

<div id="services-we-offer" class="p-4 mt-4 md:px-16 text-center text-gray-800 md:text-lg">
    <h2 class="my-2 text-3xl md:text-4xl font-extrabold text-center tracking-tight"> <span class="text-green-700 underline"> Services </span> we offer.</h2>
    <p class="my-2 text-center text-balance md:text-lg lg:text-xl">Welcome to the <span class="font-semibold">Tony Landscape & Building Services Ltd.</span> We provide a range of landscaping and building services in Wembley and the surrounding areas - <br /></p>
    <div class="my-4 grid grid-cols-3 gap-2 md:grid-cols-6">
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={GardenConstructionImage} alt="Garden Contruction" quality="low"/>
                <h3 class="py-2 text-md font-medium">Garden Construction</h3>
            </div>
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={PavingAndPatioImage} alt="Paving and Patio" quality="low"/>
                <h3 class="py-2 text-md font-medium">Patio and Paving</h3>
            </div>
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={PressureWashingImage} alt="Pressure Washing" quality="low"/>
                <h3 class="py-2 text-md font-medium">Pressure Washing</h3>
            </div>
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={FencingImage} alt="Fencing" quality="low"/>
                <h3 class="py-2 text-md font-semibold">Fencing</h3>
            </div>
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={BrickworkImage} alt="Brickwork" quality="low"/>
                <h3 class="py-2 text-md font-semibold">Brickwork</h3>
            </div>
            <div class="flex flex-col items-center">
                <Image class="rounded-md shadow-md" src={DrivewaysImage} alt="Driveways" quality="low"/>
                <h3 class="py-2 text-md font-semibold">Driveways</h3>
            </div>
    </div>
</div>