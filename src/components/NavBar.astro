<div class="h-18 lg:h-24 px-4 flex items-center gap-2 text-gray-800">
    <div>
        <!-- Website Logo -->
        <a href="#" class="flex items-center py-4 px-2">
            <span class="font-extrabold text-xl md:text-xl">Tony Landscape & Building Services</span>
        </a>
    </div>
    <div class="grow"></div>
    <!-- Primary Navbar items -->
    <div class="hidden lg:flex flex-row items-center gap-2 text-md">
        <a id="services-we-offer-link" class="py-4 px-2 hover:cursor-pointer">Services we offer</a>
        <a id="how-we-work-link" class="py-4 px-2  hover:cursor-pointer">How we work</a>
        <a id="what-our-customers-say-link" class="py-4 px-2  hover:cursor-pointer">What our customers say</a>
        <a id="how-to-contact-us-link" class="py-4 px-2  hover:cursor-pointer">How to contact us</a>
    </div>

    <!-- Mobile menu button -->
    <div class="lg:hidden flex items-center">
        <button id="mobile-menu-button" class="p-4 outline-none" aria-label="mobile-menu-button">
            <svg class="w-8 h-8 text-gray-800"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                viewBox="0 0 24 24"
                stroke="currentColor">
                <path d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>
</div>

<!-- mobile menu -->
<div id="mobile-menu" class="hidden">
    <ul>
        <li><a id="services-we-offer-button" class="block p-4 hover:bg-green-700 transition duration-300">Services we offer</a></li>
        <li><a id="how-we-work-button" class="block p-4 hover:bg-green-700 transition duration-300">How we work</a></li>
        <li><a id="what-our-customers-say-button" class="block p-4 hover:bg-green-700 transition duration-300">What our customers say</a></li>
        <li><a id="how-to-contact-us-button" class="block p-4 hover:bg-green-700 transition duration-300">How to contact us</a></li>
    </ul>
</div>

<script>
    const btn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    const servicesWeOffer = document.getElementById("services-we-offer-button");
    const howWeWorkButton = document.getElementById('how-we-work-button');
    const whatOurCustomersSayButton = document.getElementById('what-our-customers-say-button');
    const howToContactUs = document.getElementById("how-to-contact-us-button");
    const servicesWeOfferLink = document.getElementById("services-we-offer-link");
    const howWeWorkLink = document.getElementById('how-we-work-link');
    const whatOurCustomersSayLink = document.getElementById('what-our-customers-say-link');
    const howToContactUsLink = document.getElementById("how-to-contact-us-link");

    btn?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
    });

    howWeWorkButton?.addEventListener('click', () => {
        menu?.classList.toggle("hidden");
        document.getElementById('how-we-work')?.scrollIntoView({ behavior: 'smooth' });
    });

    howWeWorkLink?.addEventListener('click', () => {
        document.getElementById('how-we-work')?.scrollIntoView({ behavior: 'smooth' });
    });
    
    whatOurCustomersSayButton?.addEventListener('click', () => {
        menu?.classList.toggle("hidden");
        document.getElementById('what-our-customers-say')?.scrollIntoView({ behavior: 'smooth' });
    });

    whatOurCustomersSayLink?.addEventListener('click', () => {
        document.getElementById('what-our-customers-say')?.scrollIntoView({ behavior: 'smooth' });
    });

    servicesWeOffer?.addEventListener('click', () => {
        menu?.classList.toggle("hidden");
        document.getElementById('services-we-offer')?.scrollIntoView({ behavior: 'smooth' });
    });

    servicesWeOfferLink?.addEventListener('click', () => {
        document.getElementById('services-we-offer')?.scrollIntoView({ behavior: 'smooth' });
    });

    howToContactUs?.addEventListener('click', () => {
        menu?.classList.toggle("hidden");
        document.getElementById('how-to-contact-us')?.scrollIntoView({ behavior: 'smooth' });
    });

    howToContactUsLink?.addEventListener('click', () => {
        document.getElementById('how-to-contact-us')?.scrollIntoView({ behavior: 'smooth' });
    });
</script>
  